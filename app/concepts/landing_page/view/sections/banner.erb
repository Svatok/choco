<section id="banner">
  <div class="banner-slider">
    <% model.each do |banner| %>
      <div class="slide-div">
        <div class="banner-content">
          <div class="container">
            <div class="row">
              <div class="row-md-height">
                <div class="col-md-6 col-md-push-6 col-md-height">
                  <%= image_tag banner.image.url, alt: 'Banner Image', class: 'img-responsive'%>
                </div>
                <div class="col-md-6 col-md-pull-6 col-md-height">
                  <h1><%= banner.title %></h1>
                  <p><%= banner.description %></p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</section>
